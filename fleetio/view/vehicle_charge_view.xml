<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="vehicle_charge_view_tree" model="ir.ui.view">
        <field name="name">charge tree view</field>
        <field name="model">vehicle.charge</field>
        <field name="arch" type="xml">
            <tree string="Charge value" editable="bottom">
                <field name="vehicle"/>
            </tree>
        </field>
    </record>

    <record id="vehicle_charge_action" model="ir.actions.act_window">
        <field name="name">Charge</field>
        <field name="res_model">vehicle.charge</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new charges
            </p>
        </field>
    </record>
</odoo>